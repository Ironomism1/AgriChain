# Database
DB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/agrichain?retryWrites=true&w=majority

# Server
PORT=8000
NODE_ENV=development

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE=+1234567890

# AgriPredict ML Service
AGRIPREDICT_SERVICE_URL=http://localhost:5000
AGRIPREDICT_API_KEY=optional_api_key_if_needed

# Web3 / Blockchain
CONTRACT_ADDRESS=0x6471EACC40D24bC9F4BAB843560eDFEa190730c5
PROVIDER_URL=https://neo-rpc-endpoint.example.com
PRIVATE_KEY=your_contract_deployment_private_key

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=agrichain-uploads

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Admin Email
ADMIN_EMAIL=admin@agrichain.com
